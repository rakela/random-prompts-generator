---
import BaseLayout from '../layouts/BaseLayout.astro';
import AstroHeader from '../components/AstroHeader.astro';
import AstroFooter from '../components/AstroFooter.astro';
import '../styles/global.css';
import { getSEOData } from '../data/seo';

const seo = getSEOData('christmasWritingPrompts');

// Christmas Writing Prompts Data
const christmasPrompts = {
  holiday: [
    {
      title: "The Last Christmas Letter",
      description: "A family discovers a letter from a departed loved one, meant to be opened on Christmas Eve.",
      emoji: "‚úâÔ∏è"
    },
    {
      title: "Snow Globe City",
      description: "A child discovers that the miniature world inside a snow globe is real and needs saving before Christmas.",
      emoji: "üå®Ô∏è"
    },
    {
      title: "The 25th Shop",
      description: "A mysterious shop that only appears on December 25th sells memories instead of gifts.",
      emoji: "üéÅ"
    },
    {
      title: "Reindeer on the Roof",
      description: "A skeptical adult hears something on the roof Christmas Eve and investigates.",
      emoji: "ü¶å"
    },
    {
      title: "The Christmas Train",
      description: "A magical train arrives at midnight to take passengers to their most treasured Christmas memory.",
      emoji: "üöÇ"
    }
  ],
  cozy: [
    {
      title: "The Fireside Promise",
      description: "Two strangers snowbound in a cabin on Christmas Eve share stories that change their lives.",
      emoji: "üî•"
    },
    {
      title: "The Gingerbread Architect",
      description: "A baker creates elaborate gingerbread houses, each telling the story of a neighborhood family.",
      emoji: "üè†"
    },
    {
      title: "First Christmas Away",
      description: "Someone spends their first Christmas far from home and creates new traditions.",
      emoji: "üåç"
    },
    {
      title: "The Christmas Book Club",
      description: "A group of strangers forms a bond over decades of meeting every Christmas to discuss one book.",
      emoji: "üìö"
    },
    {
      title: "Snowfall at Midnight",
      description: "In a town where it never snows, the first snowfall in 50 years arrives on Christmas Eve.",
      emoji: "‚ùÑÔ∏è"
    }
  ]
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-red-600 via-green-600 to-blue-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Christmas Writing Prompts
      </h1>

      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        Discover heartwarming Christmas writing prompts featuring holiday magic, winter wonder, and festive stories. Perfect for seasonal creative writing, cozy tales, and holiday storytelling.
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">

      <!-- Random Generator Section -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 text-center">üé≤ Random Prompt Generator</h2>
        <p class="text-gray-600 text-center mb-6">Generate a random Christmas writing prompt instantly</p>
        <div class="text-center mb-6">
          <button id="generate-random" class="px-8 py-3 bg-gradient-to-r from-red-600 to-green-600 text-white rounded-lg font-semibold hover:from-red-700 hover:to-green-700 transition-all shadow-lg hover:shadow-xl">
            Generate Random Prompt
          </button>
        </div>
        <div id="random-prompt-display" class="hidden bg-gradient-to-r from-red-50 to-green-50 border border-red-200 rounded-lg p-6">
          <div class="flex items-start gap-3">
            <div class="flex-1">
              <p class="text-sm text-red-600 font-semibold mb-2" id="random-prompt-emoji"></p>
              <h4 class="font-bold text-gray-900 mb-2" id="random-prompt-title"></h4>
              <p class="text-gray-800" id="random-prompt-text"></p>
            </div>
            <button id="copy-random" class="p-2 text-gray-400 hover:text-gray-600 transition-colors flex-shrink-0" title="Copy prompt">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- All Prompts Display -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">All Christmas Writing Prompts</h2>

        <!-- Holiday Magic Prompts -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-red-700 mb-4 flex items-center gap-2">
            üéÑ Holiday Magic Prompts
          </h3>
          <div class="grid gap-4">
            {christmasPrompts.holiday.map((prompt, index) => (
              <div class="bg-gradient-to-r from-red-50 to-green-50 border border-red-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex items-start gap-3">
                  <span class="text-2xl">{prompt.emoji}</span>
                  <div class="flex-1">
                    <h4 class="font-bold text-gray-900 mb-1">{index + 1}. {prompt.title}</h4>
                    <p class="text-gray-700">{prompt.description}</p>
                  </div>
                  <button
                    class="copy-btn p-2 text-gray-400 hover:text-gray-600 transition-colors"
                    data-text={`${prompt.title} ‚Äî ${prompt.description}`}
                    title="Copy prompt"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Cozy Winter Prompts -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-blue-700 mb-4 flex items-center gap-2">
            ‚òï Cozy Winter Prompts
          </h3>
          <div class="grid gap-4">
            {christmasPrompts.cozy.map((prompt, index) => (
              <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex items-start gap-3">
                  <span class="text-2xl">{prompt.emoji}</span>
                  <div class="flex-1">
                    <h4 class="font-bold text-gray-900 mb-1">{index + 6}. {prompt.title}</h4>
                    <p class="text-gray-700">{prompt.description}</p>
                  </div>
                  <button
                    class="copy-btn p-2 text-gray-400 hover:text-gray-600 transition-colors"
                    data-text={`${prompt.title} ‚Äî ${prompt.description}`}
                    title="Copy prompt"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- SEO Content Section -->
      <div class="mt-16 space-y-8">
        <div class="prose prose-gray max-w-none">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Christmas Writing Prompts for Holiday Stories</h2>
          <p class="text-gray-700 mb-4">
            Christmas writing prompts capture the magic of the holiday season ‚Äî from twinkling lights and snow-covered streets to heartwarming family moments and winter wonderlands. Whether you're writing festive fiction, holiday poetry, or cozy Christmas tales, these seasonal prompts provide endless creative inspiration.
          </p>
          <p class="text-gray-700 mb-4">
            Perfect for <a href="/writing-prompts" class="text-blue-600 hover:underline">creative writing exercises</a>, holiday storytelling, or exploring Christmas themes in fiction, these writing prompts help writers tap into the warmth, wonder, and nostalgia of the Christmas season ‚Äî magical moments, family traditions, and the spirit of giving that makes Christmas storytelling so compelling.
          </p>
          <p class="text-gray-700 mb-4">
            Looking for more seasonal prompts? Try our <a href="/october-writing-prompts" class="text-blue-600 hover:underline">October Writing Prompts</a> or explore our <a href="/writing-prompts" class="text-blue-600 hover:underline">Writing Prompts Generator</a> for year-round inspiration.
          </p>
        </div>
      </div>

      <!-- Related Links -->
      <div class="mt-12 bg-gray-50 rounded-lg p-6 border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">More Writing Resources</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <a href="/writing-prompts" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
            Random Writing Prompts
          </a>
          <a href="/short-story-prompts-generator" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Short Story Prompt Generator
          </a>
          <a href="/october-writing-prompts" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            October Writing Prompts
          </a>
          <a href="/random-name-generator" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Random Name Generator
          </a>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <section class="bg-white py-16 mt-16">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">What are Christmas writing prompts?</h3>
            <p class="text-gray-700">
              Christmas writing prompts are creative story starters inspired by holiday themes, winter settings, family traditions, and the festive spirit of Christmas. They help writers explore seasonal storytelling through heartwarming tales, magical realism, cozy winter stories, and holiday-themed narratives.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Can I use Christmas prompts for children's stories?</h3>
            <p class="text-gray-700">
              Absolutely! Christmas writing prompts work wonderfully for children's stories, picture books, and family-friendly holiday tales. Many prompts can be adapted to different age groups and reading levels.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Are these prompts suitable for religious Christmas stories?</h3>
            <p class="text-gray-700">
              While these prompts focus on secular holiday themes, they can easily be adapted to include religious elements and spiritual dimensions of Christmas if that fits your story.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">What genres work best with Christmas prompts?</h3>
            <p class="text-gray-700">
              Christmas writing prompts span multiple genres: contemporary fiction, magical realism, cozy mysteries, romance, family drama, children's literature, and fantasy. The holiday setting adds warmth and nostalgia to any genre.
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>

  <AstroFooter />

  <!-- Random generator and copy functionality -->
  <script define:vars={{ christmasPrompts }}>
    const allPromptsData = christmasPrompts;

    document.addEventListener('DOMContentLoaded', () => {
      const copyButtons = document.querySelectorAll('.copy-btn');
      const generateRandomBtn = document.getElementById('generate-random');
      const randomPromptDisplay = document.getElementById('random-prompt-display');
      const copyRandomBtn = document.getElementById('copy-random');

      // Copy functionality for prompt cards
      copyButtons.forEach(button => {
        button.addEventListener('click', async () => {
          const text = button.getAttribute('data-text');
          if (text) {
            try {
              await navigator.clipboard.writeText(text);
              const originalHTML = button.innerHTML;
              button.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
              button.classList.add('text-green-600');
              setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('text-green-600');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          }
        });
      });

      // Random prompt generator
      generateRandomBtn.addEventListener('click', () => {
        const categories = Object.keys(allPromptsData);
        const randomCategory = categories[Math.floor(Math.random() * categories.length)];
        const promptsInCategory = allPromptsData[randomCategory];
        const randomPrompt = promptsInCategory[Math.floor(Math.random() * promptsInCategory.length)];

        document.getElementById('random-prompt-emoji').textContent = randomPrompt.emoji;
        document.getElementById('random-prompt-title').textContent = randomPrompt.title;
        document.getElementById('random-prompt-text').textContent = randomPrompt.description;
        randomPromptDisplay.classList.remove('hidden');

        copyRandomBtn.setAttribute('data-text', `${randomPrompt.title} ‚Äî ${randomPrompt.description}`);
      });

      // Copy random prompt
      copyRandomBtn.addEventListener('click', async () => {
        const text = copyRandomBtn.getAttribute('data-text');
        try {
          await navigator.clipboard.writeText(text);
          const originalHTML = copyRandomBtn.innerHTML;
          copyRandomBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          copyRandomBtn.classList.add('text-green-600');
          setTimeout(() => {
            copyRandomBtn.innerHTML = originalHTML;
            copyRandomBtn.classList.remove('text-green-600');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  </script>
</BaseLayout>
