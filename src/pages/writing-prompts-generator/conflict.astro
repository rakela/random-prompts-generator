---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import SimpleGenerator from '../../components/SimpleGenerator';
import '../../styles/global.css';
import { getSEOData } from '../../data/seo';

const seo = getSEOData('randomConflictGenerator');
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Random Conflict Generator
      </h1>

      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        {seo.description}
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    {/* Generator Component */}
    <SimpleGenerator client:load generatorKey="random-conflict-generator" />
  </div>

  <AstroFooter />
</BaseLayout>
