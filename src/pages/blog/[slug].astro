---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import { getAllBlogPosts, getBlogPostBySlug, getRecentBlogPosts } from '../../data/blogPosts';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const posts = getAllBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

// Fetch post by slug from params (works for both SSR and SSG)
const { slug } = Astro.params;
const post = Astro.props.post || getBlogPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/404', 301);
}

const recentPosts = getRecentBlogPosts(3).filter(p => p.slug !== post.slug);

const seo = {
  title: `${post.title} | Random Prompts`,
  description: post.excerpt,
  canonical: `https://randomprompts.org/blog/${post.slug}`
};

// Convert content to HTML (basic markdown-like conversion)
const contentHtml = post.content
  .replace(/^# (.+)$/gm, '<h1 class="text-4xl font-bold text-gray-900 mb-6">$1</h1>')
  .replace(/^## (.+)$/gm, '<h2 class="text-3xl font-bold text-gray-900 mt-12 mb-4">$1</h2>')
  .replace(/^### (.+)$/gm, '<h3 class="text-2xl font-bold text-gray-900 mt-8 mb-3">$1</h3>')
  .replace(/!\[([^\]]*)\]\(([^)]+)\)/g, '<img src="$2" alt="$1" class="rounded-lg my-6 w-full" />')
  .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-blue-600 hover:text-blue-800 underline">$1</a>')
  .replace(/\*\*(.+?)\*\*/g, '<strong class="font-bold text-gray-900">$1</strong>')
  .replace(/\*(.+?)\*/g, '<em class="italic">$1</em>')
  .replace(/^- (.+)$/gm, '<li class="ml-4">$1</li>')
  .replace(/^❌ (.+)$/gm, '<div class="flex items-start gap-2 text-red-600 mb-2"><span class="flex-shrink-0">❌</span><span>$1</span></div>')
  .replace(/^✅ (.+)$/gm, '<div class="flex items-start gap-2 text-green-600 mb-2"><span class="flex-shrink-0">✅</span><span>$1</span></div>')
  .replace(/```([\s\S]*?)```/g, '<pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto my-6"><code>$1</code></pre>')
  .replace(/`(.+?)`/g, '<code class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-sm font-mono">$1</code>')
  .replace(/\n\n/g, '</p><p class="text-gray-700 leading-relaxed mb-4">');
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Article Header -->
  <article class="bg-white">
    <!-- Featured Image / Header -->
    <div class="bg-gradient-to-br from-blue-100 to-purple-100 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Category Badge -->
        <div class="mb-4">
          <span class={`px-4 py-2 rounded-full text-sm font-bold ${
            post.category === 'tutorials' ? 'bg-green-100 text-green-700' :
            post.category === 'inspiration' ? 'bg-purple-100 text-purple-700' :
            post.category === 'productivity tips' ? 'bg-amber-100 text-amber-700' :
            'bg-blue-100 text-blue-700'
          }`}>
            {post.category === 'video ai' ? 'Video AI' :
             post.category === 'productivity tips' ? 'Productivity Tips' :
             post.category.charAt(0).toUpperCase() + post.category.slice(1)}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {post.title}
        </h1>

        <!-- Meta Information -->
        <div class="flex flex-wrap items-center gap-4 text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{post.author}</span>
          </div>
          <span>•</span>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </div>
          <span>•</span>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{post.readTime}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Article Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-8">
          <div class="prose prose-lg max-w-none">
            <p class="text-gray-700 leading-relaxed mb-4" set:html={contentHtml} />
          </div>

          <!-- Share Section -->
          <div class="mt-12 pt-8 border-t border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Share this article</h3>
            <div class="flex gap-4">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://randomprompts.org/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                </svg>
                Twitter
              </a>
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://randomprompts.org/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-6 py-3 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-4">
          <!-- Try Our Tools Widget -->
          <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-6 mb-8 sticky top-4">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Try Our Tools</h3>
            <p class="text-gray-600 mb-6">Put what you've learned into practice with our AI-powered generators</p>
            <div class="space-y-3">
              <a href="/tools/text-to-prompt" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-md transition-all">
                <h4 class="font-semibold text-gray-900 mb-1">Prompt Expander</h4>
                <p class="text-sm text-gray-600">Expand ideas into detailed prompts</p>
              </a>
              <a href="/tools/image-to-prompt" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-md transition-all">
                <h4 class="font-semibold text-gray-900 mb-1">Image Analyzer</h4>
                <p class="text-sm text-gray-600">Reverse engineer images to prompts</p>
              </a>
              <a href="/tools/video-ai-generation" class="block p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-md transition-all">
                <h4 class="font-semibold text-gray-900 mb-1">Video AI Prompts</h4>
                <p class="text-sm text-gray-600">Generate Sora & Veo prompts</p>
              </a>
            </div>
          </div>

          <!-- Recent Articles -->
          {recentPosts.length > 0 && (
            <div class="bg-white rounded-lg border border-gray-200 p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Recent Articles</h3>
              <div class="space-y-4">
                {recentPosts.map((recentPost) => (
                  <a href={`/blog/${recentPost.slug}`} class="block group">
                    <h4 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors mb-1 line-clamp-2">
                      {recentPost.title}
                    </h4>
                    <div class="flex items-center gap-2 text-sm text-gray-500">
                      <span class={`px-2 py-1 rounded text-xs font-medium ${
                        recentPost.category === 'tutorials' ? 'bg-green-100 text-green-700' :
                        recentPost.category === 'inspiration' ? 'bg-purple-100 text-purple-700' :
                        recentPost.category === 'productivity tips' ? 'bg-amber-100 text-amber-700' :
                        'bg-blue-100 text-blue-700'
                      }`}>
                        {recentPost.category === 'video ai' ? 'Video AI' :
                         recentPost.category === 'productivity tips' ? 'Productivity Tips' :
                         recentPost.category.charAt(0).toUpperCase() + recentPost.category.slice(1)}
                      </span>
                      <span>•</span>
                      <span>{recentPost.readTime}</span>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}
        </aside>
      </div>
    </div>
  </article>

  <!-- Related Articles / CTA -->
  <div class="bg-gradient-to-r from-green-600 to-teal-600 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Create?
      </h2>
      <p class="text-xl text-green-100 mb-8">
        Start generating amazing AI prompts with our free tools
      </p>
      <a href="/tools" class="inline-block bg-white text-green-600 px-8 py-4 rounded-lg font-bold text-lg hover:bg-green-50 transition-colors">
        Explore All Tools
      </a>
    </div>
  </div>

  <AstroFooter />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .prose {
    color: #374151;
    max-width: 65ch;
  }

  .prose h1, .prose h2, .prose h3 {
    color: #111827;
    font-weight: 700;
  }

  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #1d4ed8;
  }

  .prose ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin: 1rem 0;
  }

  .prose ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin: 1rem 0;
  }

  .prose li {
    margin: 0.5rem 0;
  }

  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'Courier New', monospace;
  }

  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }

  .prose blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    font-style: italic;
    color: #6b7280;
    margin: 1.5rem 0;
  }
</style>
