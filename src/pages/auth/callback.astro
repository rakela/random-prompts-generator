---
/**
 * OAuth Callback Page
 * Handles OAuth redirects from providers like Google
 */
export const prerender = false;

const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL ||
                     import.meta.env.NEXT_PUBLIC_SUPABASE_URL ||
                     import.meta.env.SUPABASE_URL || '';

const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY ||
                          import.meta.env.NEXT_PUBLIC_SUPABASE_ANON_KEY ||
                          import.meta.env.SUPABASE_ANON_KEY ||
                          import.meta.env.SUPABASE_PUBLISHABLE_KEY || '';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signing in...</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .container {
      text-align: center;
      color: white;
    }
    .spinner {
      width: 50px;
      height: 50px;
      margin: 0 auto 20px;
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="spinner"></div>
    <h1>Completing sign in...</h1>
    <p>Please wait while we redirect you.</p>
  </div>

  <script is:inline define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY }}>
    (async function() {
      try {
        // Import Supabase from CDN
        const { createClient } = await import('https://esm.sh/@supabase/supabase-js@2');

        const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY, {
          auth: {
            persistSession: true,
            autoRefreshToken: true,
          }
        });

        // Get the current URL params
        const hashParams = new URLSearchParams(window.location.hash.substring(1));
        const searchParams = new URLSearchParams(window.location.search);

        // Check if we have an access_token or code in the URL
        const hasAccessToken = hashParams.has('access_token');
        const hasCode = searchParams.has('code');

        if (hasAccessToken) {
          // Handle hash-based OAuth response (implicit flow)
          console.log('Processing OAuth callback with access token');

          // The session is already being set by Supabase automatically
          // Just wait a moment for it to process
          await new Promise(resolve => setTimeout(resolve, 500));

          // Check if session was established
          const { data: { session } } = await supabase.auth.getSession();

          if (session) {
            console.log('OAuth sign in successful');
            const redirectTo = sessionStorage.getItem('authRedirect') || '/';
            sessionStorage.removeItem('authRedirect');
            window.location.href = redirectTo;
          } else {
            console.error('No session after OAuth callback');
            window.location.href = '/';
          }
        } else if (hasCode) {
          // Handle PKCE flow with code exchange
          console.log('Processing OAuth callback with code exchange');

          // Supabase will automatically handle the code exchange
          // Just check if the session is available
          const { data: { session }, error } = await supabase.auth.getSession();

          if (error) {
            console.error('Error getting session:', error);
            alert('Authentication failed. Please try again.');
            window.location.href = '/';
            return;
          }

          if (session) {
            console.log('OAuth sign in successful');
            const redirectTo = sessionStorage.getItem('authRedirect') || '/';
            sessionStorage.removeItem('authRedirect');
            window.location.href = redirectTo;
          } else {
            // No session yet, redirect to home (user might need to verify email)
            console.log('No session available, redirecting to home');
            window.location.href = '/';
          }
        } else {
          // No OAuth params found, just redirect to home
          console.log('No OAuth params found, redirecting to home');
          window.location.href = '/';
        }
      } catch (err) {
        console.error('OAuth callback error:', err);
        // Only show alert for actual errors, not for missing params
        if (err.message && !err.message.includes('No code or session')) {
          alert('Authentication failed. Please try again.');
        }
        window.location.href = '/';
      }
    })();
  </script>
</body>
</html>
