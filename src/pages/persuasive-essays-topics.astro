  <!-- Random Generator Script -->
  <script define:vars={{ persuasiveEssaysTopics }}>
    const allPromptsData = persuasiveEssaysTopics;

    document.addEventListener('DOMContentLoaded', () => {
      const generateRandomBtn = document.getElementById('generate-random');
      const randomPromptDisplay = document.getElementById('random-prompt-display');
      const copyRandomBtn = document.getElementById('copy-random');
      let currentPrompt = null;

      generateRandomBtn.addEventListener('click', () => {
        const categories = Object.keys(allPromptsData);
        const randomCategory = categories[Math.floor(Math.random() * categories.length)];
        const promptsInCategory = allPromptsData[randomCategory];
        const randomPrompt = promptsInCategory[Math.floor(Math.random() * promptsInCategory.length)];

        currentPrompt = randomPrompt;
        document.getElementById('random-prompt-emoji').textContent = randomPrompt.emoji;
        document.getElementById('random-prompt-title').textContent = randomPrompt.title;
        document.getElementById('random-prompt-thesis').textContent = randomPrompt.thesis;

        const argumentsList = document.getElementById('random-prompt-arguments');
        argumentsList.innerHTML = '';
        randomPrompt.arguments.forEach(arg => {
          const li = document.createElement('li');
          li.textContent = arg;
          argumentsList.appendChild(li);
        });

        document.getElementById('random-prompt-counterpoint').textContent = randomPrompt.counterpoint;
        document.getElementById('random-prompt-rebuttal').textContent = randomPrompt.rebuttal;
        randomPromptDisplay.classList.remove('hidden');
      });

      copyRandomBtn.addEventListener('click', async () => {
        if (currentPrompt) {
          const text = `${currentPrompt.title}\n\nThesis: ${currentPrompt.thesis}\n\nArguments:\n${currentPrompt.arguments.map((arg, i) => `${i + 1}. ${arg}`).join('\n')}\n\nCounterpoint: ${currentPrompt.counterpoint}\n\nRebuttal: ${currentPrompt.rebuttal}`;
          try {
            await navigator.clipboard.writeText(text);
            const originalText = copyRandomBtn.textContent;
            copyRandomBtn.textContent = 'Copied!';
            setTimeout(() => {
              copyRandomBtn.textContent = originalText;
            }, 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        }
      });
    });
  </script>
