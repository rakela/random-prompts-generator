<!-- Client-side interactivity: tabs, FAQ accordion, copy buttons -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Example output tabs
    const tabs = document.querySelectorAll('.example-tab');
    const contents = document.querySelectorAll('.example-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabName = (tab as HTMLElement).dataset.tab;

        // Reset all tabs
        tabs.forEach(t => {
          t.classList.remove('bg-blue-600', 'text-white');
          t.classList.add('bg-gray-100', 'text-gray-700');
        });
        // Activate clicked tab
        tab.classList.remove('bg-gray-100', 'text-gray-700');
        tab.classList.add('bg-blue-600', 'text-white');

        // Show/hide content
        contents.forEach(c => {
          if ((c as HTMLElement).dataset.content === tabName) {
            c.classList.remove('hidden');
          } else {
            c.classList.add('hidden');
          }
        });
      });
    });

    // FAQ accordion
    const faqToggles = document.querySelectorAll('.faq-toggle');
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const answer = toggle.nextElementSibling;
        const chevron = toggle.querySelector('.faq-chevron');

        if (answer && chevron) {
          const isOpen = !answer.classList.contains('hidden');

          // Close all
          document.querySelectorAll('.faq-answer').forEach(a => a.classList.add('hidden'));
          document.querySelectorAll('.faq-chevron').forEach(c => c.classList.remove('rotate-180'));

          // Open this one if it was closed
          if (!isOpen) {
            answer.classList.remove('hidden');
            chevron.classList.add('rotate-180');
          }
        }
      });
    });

    // Copy example buttons
    const copyBtns = document.querySelectorAll('.copy-example-btn');
    copyBtns.forEach(btn => {
      btn.addEventListener('click', async () => {
        const container = btn.closest('.example-content');
        const textEl = container?.querySelector('.whitespace-pre-line');
        if (textEl) {
          try {
            await navigator.clipboard.writeText(textEl.textContent || '');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Copied!';
            (btn as HTMLElement).classList.add('bg-green-600');
            (btn as HTMLElement).classList.remove('bg-blue-600');
            setTimeout(() => {
              btn.innerHTML = originalHTML;
              (btn as HTMLElement).classList.remove('bg-green-600');
              (btn as HTMLElement).classList.add('bg-blue-600');
            }, 2000);
          } catch (e) {
            console.error('Copy failed:', e);
          }
        }
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector((anchor as HTMLAnchorElement).getAttribute('href') || '');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  });
</script>
