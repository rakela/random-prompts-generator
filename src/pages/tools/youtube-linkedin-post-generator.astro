  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "YouTube to LinkedIn Post Generator",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web",
  "description": "Convert any YouTube video into a LinkedIn post in seconds. Choose tone, length, and format. Free YouTube ‚Üí LinkedIn post generator.",
  "offers": [
    { "@type": "Offer", "price": "0", "priceCurrency": "USD", "description": "Free tier: 1 generation per day" },
    { "@type": "Offer", "price": "9.99", "priceCurrency": "USD", "description": "Pro: Unlimited generations" }
  ],
  "publisher": { "@type": "Organization", "name": "RandomPrompts.org", "url": "https://randomprompts.org" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqData.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
