---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import { getAllTools } from '../../config/tools';
import '../../styles/global.css';

export const prerender = true;

const tools = getAllTools();

// Group tools by category
const youtubeTools = tools.filter(t => t.category === 'YouTube Tools' || t.category === 'YouTube Workflows');
const promptTools = tools.filter(t => t.category === 'Prompt Tools' || t.category === 'Video AI Tools');

// Icon and color mapping for each tool
const toolConfig = {
  'youtube-content-brief': {
    icon: 'chart',
    gradient: '',
    bgColor: 'bg-blue-500',
    title: 'Content Brief Generator'
  },
  'youtube-blog-post-generator': {
    icon: 'document',
    gradient: 'from-purple-500 to-pink-600',
    bgColor: 'bg-purple-500',
    title: 'Blog Post Generator'
  },
  'youtube-linkedin-post-generator': {
    icon: 'briefcase',
    gradient: 'from-indigo-500 to-blue-600',
    bgColor: 'bg-indigo-500',
    title: 'LinkedIn Post Generator'
  },
  'youtube-to-blog-and-linkedin': {
    icon: 'workflow',
    gradient: 'from-violet-500 to-fuchsia-600',
    bgColor: 'bg-violet-500',
    title: 'Complete Workflow'
  },
  'text-to-prompt': {
    icon: 'sparkles',
    gradient: 'from-emerald-500 to-teal-600',
    bgColor: 'bg-emerald-500',
    title: 'Prompt Expander & Logic'
  },
  'image-to-prompt': {
    icon: 'image',
    gradient: 'from-amber-500 to-orange-600',
    bgColor: 'bg-amber-500',
    title: 'Image Analyzer'
  },
  'video-ai-generation': {
    icon: 'video',
    gradient: 'from-rose-500 to-red-600',
    bgColor: 'bg-rose-500',
    title: 'Video AI Prompts'
  }
};

const seo = {
  title: 'AI Tools - YouTube Content, Prompt Generators & Image Analysis',
  description: 'Powerful AI tools for content creation: Transform YouTube videos, expand prompts, analyze images, and generate video AI prompts for Sora & Veo.',
  canonical: 'https://randomprompts.org/tools'
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        AI-Powered Tools
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Professional AI tools for content creation, prompt engineering, and creative workflows.
        Transform videos, analyze images, and generate prompts in seconds.
      </p>
    </div>

     <!-- YouTube Tools Section -->
    <div class="mb-16" style="padding: 60px 0; margin-top: 40px;">
      <div class="flex items-center gap-3 mb-8">
        <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <h2 class="text-3xl font-bold text-gray-900">YouTube Content Tools</h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {youtubeTools.map(tool => {
          const config = toolConfig[tool.tool_id];
          return (
            <a
              href={`/tools/${tool.tool_id}`}
              class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100"
            >
              <div class={`bg-gradient-to-br ${config.gradient} p-8`}>
                <div class="bg-white/10 backdrop-blur-sm w-16 h-16 rounded-xl flex items-center justify-center mb-4">
                  {config.icon === 'chart' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                  )}
                  {config.icon === 'document' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  )}
                  {config.icon === 'briefcase' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  )}
                  {config.icon === 'workflow' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z" />
                    </svg>
                  )}
                </div>

                <h3 class="text-2xl font-bold text-black mb-2 leading-tight">
                  {config.title}
                </h3>
              </div>

              <div class="p-6">
                <p class="text-gray-600 mb-6 leading-relaxed min-h-[4rem]">
                  {tool.seo_description}
                </p>

                <div class="flex items-center justify-between">
                  <span class={`inline-flex items-center gap-2 text-sm font-bold ${config.bgColor.replace('bg-', 'text-')} group-hover:translate-x-1 transition-transform`}>
                    Try it now
                    <svg class={`w-4 h-4 ${config.bgColor.replace('bg-', 'text-')}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  </span>

                  <span class="text-xs font-semibold text-gray-400 uppercase tracking-wide">
                    {tool.category}
                  </span>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </div>

    
    <!-- Workflows CTA -->
    <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-2xl p-10 text-white text-center shadow-xl" style="padding: 60px 0; margin-bottom: 40px; margin-top: 40px;">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-4">
          Need All Three YouTube Tools? Try Our Complete Workflow
        </h2>
        <p class="text-lg mb-8 opacity-90 leading-relaxed">
          Generate content brief, blog post, and LinkedIn posts all at once with a single click.
          Save time and streamline your content creation process.
        </p>
        <a
          href="/workflows/youtube-to-blog-and-linkedin"
          class="inline-flex items-center gap-2 bg-white text-purple-600 px-8 py-4 rounded-xl font-bold hover:bg-gray-50 transition-all hover:scale-105 shadow-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Try Complete Workflow
        </a>
      </div>
    </div>

    <!-- Prompt Tools Section -->
    <div class="mb-16" style="padding: 60px 0; margin-bottom: 40px;">
      <div class="flex items-center gap-3 mb-8">
        <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
        <h2 class="text-3xl font-bold text-gray-900">Prompt Tools</h2>
        <span class="bg-emerald-100 text-emerald-700 text-xs font-bold px-3 py-1 rounded-full">NEW</span>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {promptTools.map(tool => {
          const config = toolConfig[tool.tool_id];
          return (
            <a
              href={`/tools/${tool.tool_id}`}
              class="group bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100"
            >
              <div class={`bg-gradient-to-br ${config.gradient} p-8 relative`}>
                <div class="absolute top-4 right-4 bg-white/20 backdrop-blur-sm rounded-lg px-3 py-1">
                  <span class="text-white text-xs font-semibold">NEW</span>
                </div>

                <div class="bg-white/10 backdrop-blur-sm w-16 h-16 rounded-xl flex items-center justify-center mb-4">
                  {config.icon === 'sparkles' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                  )}
                  {config.icon === 'image' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  )}
                  {config.icon === 'video' && (
                    <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  )}
                </div>

                <h3 class="text-2xl font-bold text-black mb-2 leading-tight">
                  {config.title}
                </h3>
              </div>

              <div class="p-6">
                <p class="text-gray-600 mb-6 leading-relaxed min-h-[4rem]">
                  {tool.seo_description}
                </p>

                <div class="flex items-center justify-between">
                  <span class={`inline-flex items-center gap-2 text-sm font-bold ${config.bgColor.replace('bg-', 'text-')} group-hover:translate-x-1 transition-transform`}>
                    Try it now
                    <svg class={`w-4 h-4 ${config.bgColor.replace('bg-', 'text-')}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  </span>

                  <span class="text-xs font-semibold text-gray-400 uppercase tracking-wide">
                    {tool.category}
                  </span>
                </div>
              </div>
            </a>
          );
        })}
      </div>
    </div>

 

    <!-- Features Section -->
    <div class="mt-20">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-4">
        Why Choose Our AI Tools?
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Professional-grade AI tools designed for content creators, marketers, and creative professionals
      </p>

      <div class="grid md:grid-cols-3 gap-10">
        <div class="text-center">
          <div class="bg-gradient-to-br from-blue-500 to-cyan-600 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="text-white w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Lightning Fast</h3>
          <p class="text-gray-600 leading-relaxed">
            Transform hours of manual work into seconds. Generate professional content with one click and get instant results.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-gradient-to-br  from-blue-500 to-cyan-600 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="text-white w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">AI-Powered Excellence</h3>
          <p class="text-gray-600 leading-relaxed">
            Powered by cutting-edge AI models including Claude and GPT-4. Get context-aware, high-quality content every time.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-gradient-to-br  from-blue-500 to-cyan-600 w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="text-white w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Fully Customizable</h3>
          <p class="text-gray-600 leading-relaxed">
            Complete control over tone, length, style, and format. Fine-tune every aspect to match your brand voice perfectly.
          </p>
        </div>
      </div>
    </div>
  </div>

  <AstroFooter />
</BaseLayout>
