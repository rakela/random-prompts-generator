---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import { getAllTools } from '../../config/tools';

export const prerender = true;

const tools = getAllTools();

const seo = {
  title: 'YouTube Content Tools - Convert Videos to Blog Posts & Social Media',
  description: 'Powerful tools to transform YouTube videos into content briefs, blog posts, and LinkedIn posts. Repurpose video content efficiently.',
  canonical: 'https://randomprompts.org/tools'
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <div class="max-w-6xl mx-auto px-4 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        YouTube Content Tools
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Transform YouTube videos into professional content with our AI-powered tools.
        Create content briefs, blog posts, and social media content in minutes.
      </p>
    </div>

    <!-- Tools Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {tools.map(tool => (
        <a
          href={`/tools/${tool.tool_id}`}
          class="group bg-white rounded-lg border-2 border-gray-200 hover:border-blue-500 transition-all duration-300 overflow-hidden hover:shadow-lg"
        >
          <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-6 text-white">
            <div class="text-4xl mb-3">
              {tool.tool_id === 'youtube-content-brief' && 'üìä'}
              {tool.tool_id === 'youtube-blog-post-generator' && 'üìù'}
              {tool.tool_id === 'youtube-linkedin-post-generator' && 'üíº'}
            </div>
            <h2 class="text-xl font-bold mb-2">
              {tool.tool_id === 'youtube-content-brief' && 'Content Brief Generator'}
              {tool.tool_id === 'youtube-blog-post-generator' && 'Blog Post Generator'}
              {tool.tool_id === 'youtube-linkedin-post-generator' && 'LinkedIn Post Generator'}
            </h2>
          </div>

          <div class="p-6">
            <p class="text-gray-600 mb-4 text-sm">
              {tool.seo_description}
            </p>

            <div class="flex items-center text-blue-600 font-semibold text-sm group-hover:translate-x-2 transition-transform">
              <span>Use this tool</span>
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100">
              <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
                {tool.category}
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Workflows CTA -->
    <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg p-8 text-white text-center">
      <h2 class="text-3xl font-bold mb-4">
        Need All Three? Try Our Complete Workflow
      </h2>
      <p class="text-lg mb-6 opacity-90">
        Generate content brief, blog post, and LinkedIn posts all at once with a single click
      </p>
      <a
        href="/workflows/youtube-to-blog-and-linkedin"
        class="inline-block bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        Try Complete Workflow ‚Üí
      </a>
    </div>

    <!-- Features Section -->
    <div class="mt-16">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Why Use Our Tools?
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="text-blue-600 w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Fast & Efficient</h3>
          <p class="text-gray-600">
            Convert hours of manual work into minutes. Get professional content instantly.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="text-purple-600 w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">AI-Powered</h3>
          <p class="text-gray-600">
            Leveraging advanced AI to understand context and generate quality content.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="text-green-600 w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Fully Customizable</h3>
          <p class="text-gray-600">
            Control tone, length, style, and format. Generate exactly what you need.
          </p>
        </div>
      </div>
    </div>
  </div>

  <AstroFooter />
</BaseLayout>
