---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import ToolPage from '../../components/ToolPage';
import { getToolById } from '../../config/tools';

export const prerender = true;

// Get the portrait generator tool configuration
const tool = getToolById('ai-portrait-generator');

if (!tool) {
  return Astro.redirect('/404');
}

// SEO data
const seo = {
  title: tool.seo_title,
  description: tool.seo_description,
  canonical: 'https://randomprompts.org/art-prompts/portrait'
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <ToolPage client:load tool={tool} freeGenerations={5} />

  <AstroFooter />
</BaseLayout>
