---
import BaseLayout from '../layouts/BaseLayout.astro';
import AstroHeader from '../components/AstroHeader.astro';
import AstroFooter from '../components/AstroFooter.astro';
import PromptGenerator from '../components/PromptGenerator';
import '../styles/global.css';
import { getSEOData } from '../data/seo';
import categoryPrompts from '../data/categoryPrompts.json';

const seo = getSEOData('home');

// Extract unique categories from category prompts for navigation
const categories = [...new Set(categoryPrompts.map(prompt => prompt.category))];
const categoryInfo = {
  'fantasy': {
    title: 'Fantasy Writing Prompts',
    description: 'Magical worlds, mythical creatures, and epic adventures',
    icon: '‚ú®',
    color: 'purple'
  },
  'sci-fi': {
    title: 'Sci-Fi Writing Prompts',
    description: 'Space exploration, futuristic tech, and alien encounters',
    icon: 'üöÄ',
    color: 'blue'
  },
  'romance': {
    title: 'Romance Writing Prompts',
    description: 'Love stories, emotional journeys, and heartfelt connections',
    icon: 'üíï',
    color: 'pink'
  }
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Random Prompts Generator
      </h1>

      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        Random Prompts Generator for writing, AI art, blogging, stories, and character creation, all in one clean, powerful tool. Instantly generate professional-quality prompts for ChatGPT, MidJourney, and creative writing.
      </p>
    </div>
  </div>

  <!-- Featured: YouTube Tools Section -->
  <section class="bg-gradient-to-br from-red-50 to-orange-50 py-12 border-y border-red-100">
    <div class="max-w-6xl mx-auto px-4">
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-10 border border-red-100">
        <div class="flex items-start gap-4 mb-6">
          <div class="bg-red-600 text-white p-3 rounded-xl">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">üöÄ NEW: YouTube Content Generator</h2>
            <p class="text-lg text-gray-600">
              Transform any YouTube video into blog posts and LinkedIn content with AI
            </p>
          </div>
        </div>

        <div class="grid md:grid-cols-3 gap-6 mb-8">
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-6 border border-blue-200">
            <div class="text-4xl mb-3">üìä</div>
            <h3 class="font-semibold text-gray-900 mb-2">1. Extract Insights</h3>
            <p class="text-sm text-gray-600">Generate structured content briefs from video transcripts</p>
          </div>
          <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-6 border border-purple-200">
            <div class="text-4xl mb-3">üìù</div>
            <h3 class="font-semibold text-gray-900 mb-2">2. Create Blog Posts</h3>
            <p class="text-sm text-gray-600">Transform insights into SEO-optimized articles</p>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-6 border border-green-200">
            <div class="text-4xl mb-3">üíº</div>
            <h3 class="font-semibold text-gray-900 mb-2">3. Generate LinkedIn Posts</h3>
            <p class="text-sm text-gray-600">Create professional social media content</p>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/workflows/youtube-to-blog-and-linkedin"
            class="inline-flex items-center justify-center gap-2 bg-red-600 text-white font-semibold px-8 py-4 rounded-lg hover:bg-red-700 transition-all transform hover:scale-105 shadow-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
            Try Full Workflow
          </a>
          <a
            href="/tools/youtube-content-brief"
            class="inline-flex items-center justify-center gap-2 bg-white text-red-600 font-semibold px-8 py-4 rounded-lg hover:bg-red-50 transition-all border-2 border-red-600"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Explore Individual Tools
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    {/* Prompt Generator Component */}
    <PromptGenerator client:load category="writing" />
  </div>

  <!-- Features Section -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Our Prompt Generator?</h2>
        <p class="text-xl text-gray-600 mb-12">Professional-quality prompts designed for real-world creative work</p>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="text-blue-600 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Instant Generation</h3>
            <p class="text-gray-600">Generate unlimited prompts instantly with our advanced algorithms</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="text-purple-600 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Professional Quality</h3>
            <p class="text-gray-600">Prompts crafted with industry terminology and proven techniques</p>
          </div>
          <div class="text-center">
            <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="text-green-600 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Save & Export</h3>
            <p class="text-gray-600">Save your favorite prompts and export them for future use</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- All Tools Section -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Explore All Our Free Tools</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <a href="/writing-prompts" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Writing Prompts</h3>
            <p class="text-gray-600">Generate creative writing prompts with conflicts and plot twists</p>
          </a>
          <a href="/ai-images-prompt" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">AI Art Prompts</h3>
            <p class="text-gray-600">Professional prompts for MidJourney, DALL-E, and Stable Diffusion</p>
          </a>
          <a href="/ai-blog-post-generator" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Blog Post Generator</h3>
            <p class="text-gray-600">SEO-optimized blog post ideas and content strategies</p>
          </a>
          <a href="/short-story-prompts-generator" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Short Story Prompts</h3>
            <p class="text-gray-600">Fantasy worldbuilding and short fiction prompts</p>
          </a>
          <a href="/random-name-generator" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Character Names</h3>
            <p class="text-gray-600">Generate unique fantasy and character names</p>
          </a>
          <a href="/october-writing-prompts" class="bg-white p-6 rounded-lg border border-gray-200 hover:shadow-lg transition-shadow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">October Prompts</h3>
            <p class="text-gray-600">Halloween and fall-themed writing prompts</p>
          </a>
        </div>
    </div>
  </section>

  <!-- Category-Based Generators Section -->
  <section class="py-16 bg-gradient-to-br from-purple-50 to-blue-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Genre-Specific Writing Prompts</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Dive deep into your favorite genres with our specialized prompt generators.
          Each category features unique, curated prompts designed for that specific genre.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {categories.map(category => {
          const info = categoryInfo[category] || {
            title: `${category.charAt(0).toUpperCase() + category.slice(1)} Prompts`,
            description: `Explore ${category} writing prompts`,
            icon: 'üìù',
            color: 'gray'
          };
          const promptCount = categoryPrompts.filter(p => p.category === category).length;

          const colorClasses = {
            purple: 'from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700',
            blue: 'from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700',
            pink: 'from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700',
            gray: 'from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700'
          };

          return (
            <a
              href={`/prompts/${category}`}
              class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden"
            >
              <div class={`bg-gradient-to-r ${colorClasses[info.color]} p-6 text-white`}>
                <div class="text-5xl mb-3">{info.icon}</div>
                <h3 class="text-2xl font-bold mb-2">{info.title}</h3>
                <p class="text-sm opacity-90">{promptCount}+ unique prompts</p>
              </div>
              <div class="p-6">
                <p class="text-gray-600 mb-4">{info.description}</p>
                <div class="flex items-center text-purple-600 font-semibold group-hover:translate-x-2 transition-transform">
                  <span>Explore {category} prompts</span>
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </a>
          );
        })}
      </div>
      <div class="text-center mt-12">
        <p class="text-gray-600 mb-4">
          Each category features interactive generators with locking, history, and copy functionality
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-sm">
          <span class="px-4 py-2 bg-white rounded-full shadow-sm text-gray-700">
            üîí Lock your favorite prompts
          </span>
          <span class="px-4 py-2 bg-white rounded-full shadow-sm text-gray-700">
            üìú Browse prompt history
          </span>
          <span class="px-4 py-2 bg-white rounded-full shadow-sm text-gray-700">
            üìã One-click copy
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">What is a random prompts generator?</h3>
            <p class="text-gray-700">
              It's a tool that instantly creates unique ideas for writing, AI art, blogs, and worldbuilding using curated templates and parameters like genre, tone, and style.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Is the Random Prompts Generator free to use?</h3>
            <p class="text-gray-700">
              Yes. You can generate unlimited prompts for free. Optional pro features may include saving, bulk export, and an API.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Can I use the generated prompts commercially?</h3>
            <p class="text-gray-700">
              Yes. Prompts are yours to use for personal or commercial projects; attribution is appreciated but not required.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <AstroFooter />
</BaseLayout>
