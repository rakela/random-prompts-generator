---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import { getAllWorkflows } from '../../config/workflows';

export const prerender = true;

const workflows = getAllWorkflows();

const seo = {
  title: 'Content Workflows - Automated YouTube Content Repurposing',
  description: 'Complete automated workflows to transform YouTube videos into blog posts and social media content. One-click content generation.',
  canonical: 'https://randomprompts.org/workflows'
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <div class="max-w-6xl mx-auto px-4 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Content Workflows
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Automated multi-step workflows that transform YouTube videos into complete content packages.
        Get everything you need with a single click.
      </p>
    </div>

    <!-- Workflows Grid -->
    <div class="grid md:grid-cols-1 gap-6 mb-16 max-w-4xl mx-auto">
      {workflows.map(workflow => (
        <a
          href={`/workflows/${workflow.workflow_id}`}
          class="group bg-white rounded-lg border-2 border-gray-200 hover:border-purple-500 transition-all duration-300 overflow-hidden hover:shadow-xl"
        >
          <div class="bg-gradient-to-br from-purple-600 to-blue-600 p-8 text-white">
            <div class="flex items-start justify-between">
              <div>
                <div class="text-5xl mb-4">üöÄ</div>
                <h2 class="text-2xl font-bold mb-3">
                  YouTube to Blog & LinkedIn
                </h2>
                <p class="text-lg opacity-90 mb-4">
                  {workflow.seo_description}
                </p>
              </div>
            </div>

            <div class="flex gap-2 flex-wrap">
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
                {workflow.steps.length} Steps
              </span>
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
                {workflow.final_output_layout.sections.length} Outputs
              </span>
              <span class="px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold">
                Fully Automated
              </span>
            </div>
          </div>

          <div class="p-8">
            <h3 class="font-semibold text-gray-900 mb-4 text-lg">This workflow generates:</h3>

            <div class="space-y-3 mb-6">
              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
                  <span class="text-purple-600 font-bold text-sm">1</span>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Content Brief</h4>
                  <p class="text-sm text-gray-600">
                    Structured summary with key insights, themes, and takeaways
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                  <span class="text-blue-600 font-bold text-sm">2</span>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Blog Post</h4>
                  <p class="text-sm text-gray-600">
                    SEO-optimized article with customizable length and tone
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                  <span class="text-green-600 font-bold text-sm">3</span>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">LinkedIn Posts</h4>
                  <p class="text-sm text-gray-600">
                    Multiple post variants optimized for engagement
                  </p>
                </div>
              </div>
            </div>

            <div class="flex items-center text-purple-600 font-semibold group-hover:translate-x-2 transition-transform">
              <span>Start Workflow</span>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Individual Tools CTA -->
    <div class="bg-gray-50 rounded-lg p-8 text-center border border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">
        Need Individual Tools?
      </h2>
      <p class="text-gray-600 mb-6">
        Use our tools separately for more control over each step
      </p>
      <a
        href="/tools"
        class="inline-block bg-gray-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
      >
        Browse Individual Tools ‚Üí
      </a>
    </div>

    <!-- How It Works -->
    <div class="mt-16">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        How Workflows Work
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">1Ô∏è‚É£</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Input Once</h3>
          <p class="text-gray-600">
            Paste your YouTube URL and configure your preferences in a single form
          </p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">2Ô∏è‚É£</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Automated Processing</h3>
          <p class="text-gray-600">
            Our AI processes the video through multiple steps automatically
          </p>
        </div>

        <div class="text-center">
          <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">3Ô∏è‚É£</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Multiple Outputs</h3>
          <p class="text-gray-600">
            Get all your content in one place, ready to copy and use
          </p>
        </div>
      </div>
    </div>

    <!-- Benefits -->
    <div class="mt-16 bg-gradient-to-br from-purple-50 to-blue-50 rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
        Why Use Workflows?
      </h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div class="flex items-start gap-3">
          <div class="text-2xl">‚ö°</div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Save Time</h3>
            <p class="text-sm text-gray-600">
              Get all your content in one go instead of running multiple tools
            </p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="text-2xl">üéØ</div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Consistency</h3>
            <p class="text-sm text-gray-600">
              Ensure all content pieces align with the same insights and messaging
            </p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="text-2xl">üíº</div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Professional Quality</h3>
            <p class="text-sm text-gray-600">
              Each step builds on the previous one for coherent, high-quality output
            </p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <div class="text-2xl">üîÑ</div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-1">Repeatable Process</h3>
            <p class="text-sm text-gray-600">
              Use the same workflow for every video to maintain your content standards
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <AstroFooter />
</BaseLayout>
