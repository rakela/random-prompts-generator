---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AstroHeader from '../../components/AstroHeader.astro';
import AstroFooter from '../../components/AstroFooter.astro';
import '../../styles/global.css';

const seo = {
  title: 'Fantasy World Generator',
  description: 'Generate random fantasy world concepts with unique settings, cultures, and magical systems for worldbuilding.'
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-green-600 to-teal-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Fantasy World Generator
      </h1>

      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        {seo.description}
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <p class="text-gray-600 text-center">Content coming soon...</p>
  </div>

  <AstroFooter />
</BaseLayout>
