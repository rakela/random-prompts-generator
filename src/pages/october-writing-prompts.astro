---
import BaseLayout from '../layouts/BaseLayout.astro';
import AstroHeader from '../components/AstroHeader.astro';
import AstroFooter from '../components/AstroFooter.astro';
import '../styles/global.css';
import { getSEOData } from '../data/seo';

const seo = getSEOData('octoberWritingPrompts');

// October Writing Prompts Data
const octoberPrompts = {
  autumnFall: [
    {
      title: "The Caf√© in October",
      description: "Write about a hidden caf√© that only appears when the autumn leaves start to fall.",
      emoji: "üçÅ"
    },
    {
      title: "Whispers in the Woods",
      description: "A quiet forest that hums with voices when the wind passes through the golden trees.",
      emoji: "üçÇ"
    },
    {
      title: "Pumpkin Market at Sunset",
      description: "Capture the warmth of a local harvest fair filled with glowing lanterns and cinnamon air.",
      emoji: "üéÉ"
    },
    {
      title: "Letters from Autumn Past",
      description: "Someone starts receiving handwritten letters from their younger self every fall.",
      emoji: "‚úâÔ∏è"
    },
    {
      title: "The Last Bonfire",
      description: "A group of old friends meets for their final bonfire before life takes them in different directions.",
      emoji: "üî•"
    }
  ],
  halloween: [
    {
      title: "Masks After Midnight",
      description: "At a Halloween party, everyone's masks begin to take on a life of their own.",
      emoji: "üé≠"
    },
    {
      title: "The Haunted Costume Shop",
      description: "A shop that appears once a year and gives out costumes with strange powers.",
      emoji: "üëª"
    },
    {
      title: "Pumpkin Hollow Manor",
      description: "A family inherits a mansion where carved pumpkins guard the secrets of the dead.",
      emoji: "üèöÔ∏è"
    },
    {
      title: "The Photographer of Ghosts",
      description: "A street photographer in October starts seeing spirits appear in their Polaroids.",
      emoji: "üì∑"
    },
    {
      title: "31 Nights of Whispers",
      description: "Every night in October, someone hears a voice counting down to Halloween ‚Äî but to what?",
      emoji: "üåô"
    }
  ]
};
---

<BaseLayout seo={seo}>
  <AstroHeader />

  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-orange-600 via-red-600 to-purple-600 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        October Writing Prompts
      </h1>

      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        Discover creative October writing prompts featuring autumn themes, Halloween stories, and fall-inspired narratives. Perfect for seasonal creative writing, spooky tales, and cozy autumn stories.
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">

      <!-- Random Generator Section -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 text-center">üé≤ Random Prompt Generator</h2>
        <p class="text-gray-600 text-center mb-6">Generate a random October writing prompt instantly</p>
        <div class="text-center mb-6">
          <button id="generate-random" class="px-8 py-3 bg-gradient-to-r from-orange-600 to-purple-600 text-white rounded-lg font-semibold hover:from-orange-700 hover:to-purple-700 transition-all shadow-lg">
            Generate Random Prompt
          </button>
        </div>
        <div id="random-prompt-display" class="hidden bg-gradient-to-r from-orange-50 to-purple-50 border border-orange-200 rounded-lg p-6">
          <div class="flex items-start gap-3">
            <div class="flex-1">
              <p class="text-sm text-orange-600 font-semibold mb-2" id="random-prompt-emoji"></p>
              <h4 class="font-bold text-gray-900 mb-2" id="random-prompt-title"></h4>
              <p class="text-gray-800" id="random-prompt-text"></p>
            </div>
            <button id="copy-random" class="p-2 text-gray-400 hover:text-gray-600 transition-colors flex-shrink-0" title="Copy prompt">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- All Prompts Display -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">All October Writing Prompts</h2>

        <!-- Autumn & Fall Prompts -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-orange-700 mb-4 flex items-center gap-2">
            üçÅ Autumn & Fall Prompts
          </h3>
          <div class="grid gap-4">
            {octoberPrompts.autumnFall.map((prompt, index) => (
              <div class="bg-gradient-to-r from-orange-50 to-yellow-50 border border-orange-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex items-start gap-3">
                  <span class="text-2xl">{prompt.emoji}</span>
                  <div class="flex-1">
                    <h4 class="font-bold text-gray-900 mb-1">{index + 1}. {prompt.title}</h4>
                    <p class="text-gray-700">{prompt.description}</p>
                  </div>
                  <button
                    class="copy-btn p-2 text-gray-400 hover:text-gray-600 transition-colors"
                    data-text={`${prompt.title} ‚Äî ${prompt.description}`}
                    title="Copy prompt"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Halloween Prompts -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-purple-700 mb-4 flex items-center gap-2">
            üéÉ Halloween Prompts
          </h3>
          <div class="grid gap-4">
            {octoberPrompts.halloween.map((prompt, index) => (
              <div class="bg-gradient-to-r from-purple-50 to-pink-50 border border-purple-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="flex items-start gap-3">
                  <span class="text-2xl">{prompt.emoji}</span>
                  <div class="flex-1">
                    <h4 class="font-bold text-gray-900 mb-1">{index + 6}. {prompt.title}</h4>
                    <p class="text-gray-700">{prompt.description}</p>
                  </div>
                  <button
                    class="copy-btn p-2 text-gray-400 hover:text-gray-600 transition-colors"
                    data-text={`${prompt.title} ‚Äî ${prompt.description}`}
                    title="Copy prompt"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- SEO Content Section -->
      <div class="mt-16 space-y-8">
        <div class="prose prose-gray max-w-none">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">October Writing Prompts for Autumn & Halloween</h2>
          <p class="text-gray-700 mb-4">
            October writing prompts capture the magic of autumn ‚Äî from crisp fallen leaves and harvest moons to spooky Halloween tales and cozy fireside stories. Whether you're writing horror fiction, seasonal poetry, or heartwarming autumn narratives, October-themed prompts provide endless creative inspiration.
          </p>
          <p class="text-gray-700 mb-4">
            Perfect for <a href="/writing-prompts" class="text-blue-600 hover:underline">creative writing exercises</a>, NaNoWriMo preparation, or exploring seasonal storytelling, October writing prompts help writers tap into the atmospheric richness of fall ‚Äî mysterious fog, changing seasons, and the thin veil between worlds that makes October storytelling so compelling.
          </p>
          <p class="text-gray-700 mb-4">
            Prefer shorter prompts? Try our <a href="/writing-prompts" class="text-blue-600 hover:underline">Writing Prompts Generator</a> or switch to seasonal visuals by visiting our <a href="/ai-images-prompt" class="text-blue-600 hover:underline">AI Art Prompts page</a>.
          </p>
        </div>
      </div>

      <!-- Related Links -->
      <div class="mt-12 bg-gray-50 rounded-lg p-6 border border-gray-200">
        <h3 class="text-xl font-bold text-gray-900 mb-4">More Writing Resources</h3>
        <div class="grid md:grid-cols-2 gap-4">
          <a href="/writing-prompts" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
            Random Writing Prompts
          </a>
          <a href="/short-story-prompts-generator" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Short Story Prompt Generator
          </a>
          <a href="/ai-blog-post-generator" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Blog Post Generator
          </a>
          <a href="/random-name-generator" class="text-blue-600 hover:underline flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
            Random Name Generator
          </a>
        </div>
      </div>
    </div>

    <!-- FAQ Section -->
    <section class="bg-white py-16 mt-16">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
        <div class="space-y-6">
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">What are October writing prompts?</h3>
            <p class="text-gray-700">
              October writing prompts are creative story starters inspired by autumn themes, Halloween elements, fall seasons, and the atmospheric mood of October. They help writers explore seasonal storytelling through horror, mystery, cozy autumn tales, and harvest-themed narratives.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Can I use October prompts for NaNoWriMo?</h3>
            <p class="text-gray-700">
              Absolutely! October writing prompts are perfect for NaNoWriMo (National Novel Writing Month) preparation and brainstorming. Many writers use seasonal prompts in October to warm up for the November writing challenge.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Are Halloween writing prompts included?</h3>
            <p class="text-gray-700">
              Yes! October writing prompts include Halloween-themed story ideas featuring spooky scenarios, supernatural elements, horror atmospheres, and classic October traditions like trick-or-treating, haunted houses, and autumn festivals.
            </p>
          </div>

          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">What genres work best with October prompts?</h3>
            <p class="text-gray-700">
              October writing prompts span multiple genres: horror and supernatural fiction, cozy mysteries, literary fiction with autumn settings, romance with fall backdrops, magical realism, and reflective personal essays about change and seasons.
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>

  <AstroFooter />

  <!-- Random generator and copy functionality -->
  <script define:vars={{ octoberPrompts }}>
    const allPromptsData = octoberPrompts;

    document.addEventListener('DOMContentLoaded', () => {
      const copyButtons = document.querySelectorAll('.copy-btn');
      const generateRandomBtn = document.getElementById('generate-random');
      const randomPromptDisplay = document.getElementById('random-prompt-display');
      const copyRandomBtn = document.getElementById('copy-random');

      // Copy functionality for prompt cards
      copyButtons.forEach(button => {
        button.addEventListener('click', async () => {
          const text = button.getAttribute('data-text');
          if (text) {
            try {
              await navigator.clipboard.writeText(text);
              const originalHTML = button.innerHTML;
              button.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
              button.classList.add('text-green-600');
              setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('text-green-600');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          }
        });
      });

      // Random prompt generator
      generateRandomBtn.addEventListener('click', () => {
        const categories = Object.keys(allPromptsData);
        const randomCategory = categories[Math.floor(Math.random() * categories.length)];
        const promptsInCategory = allPromptsData[randomCategory];
        const randomPrompt = promptsInCategory[Math.floor(Math.random() * promptsInCategory.length)];

        document.getElementById('random-prompt-emoji').textContent = randomPrompt.emoji;
        document.getElementById('random-prompt-title').textContent = randomPrompt.title;
        document.getElementById('random-prompt-text').textContent = randomPrompt.description;
        randomPromptDisplay.classList.remove('hidden');

        copyRandomBtn.setAttribute('data-text', `${randomPrompt.title} ‚Äî ${randomPrompt.description}`);
      });

      // Copy random prompt
      copyRandomBtn.addEventListener('click', async () => {
        const text = copyRandomBtn.getAttribute('data-text');
        try {
          await navigator.clipboard.writeText(text);
          const originalHTML = copyRandomBtn.innerHTML;
          copyRandomBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          copyRandomBtn.classList.add('text-green-600');
          setTimeout(() => {
            copyRandomBtn.innerHTML = originalHTML;
            copyRandomBtn.classList.remove('text-green-600');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  </script>
</BaseLayout>
