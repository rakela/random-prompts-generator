---
import BaseLayout from '../layouts/BaseLayout.astro';
import AstroHeader from '../components/AstroHeader.astro';
import AstroFooter from '../components/AstroFooter.astro';
import '../styles/global.css';

const seo = {
  title: 'Pricing - Random Prompts Generator | Free & Pro Plans',
  description: 'Choose the perfect plan for your creative needs. Free daily credits, Pro unlimited access, or flexible credit packs. Transparent pricing with no hidden fees.',
